@model School_MS.Models.tblQuestion

@{
    ViewData["Title"] = "Create";
}

<h1>Questions Detail</h1>

<h4 class="text-center">Add New Question</h4>
<hr />
<div>
    <a class="btn btn-primary btn-sm" asp-action="Index">Back to List</a>
</div>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row col-md-12">
        <div class="col-md-3">
            <div class="form-group">
                <label class="control-label">Subject</label>

                <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">

                <label class="control-label">Chapter No</label>
                <select asp-for="Chaptertid" class="form-control" asp-items="ViewBag.Chaptertid"></select>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">

                <label class="control-label">Question No</label>
                <input asp-for="QuestionNo" class="form-control" />
                <span asp-validation-for="QuestionNo" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row col-md-12">
        <div class="col-md-3">
            <div class="form-group">
                <label class="control-label">Question Name</label>
                <input asp-for="QuestionName" class="form-control" />
                <span asp-validation-for="QuestionName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label class="control-label">Question Answer</label>
                <input asp-for="QuestionAnswer" class="form-control" />
                <span asp-validation-for="QuestionAnswer" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                <div class="form-group">

                    <input type="submit" value="Add New Question" class="btn btn-success btn-sm" style="margin-top:35px;" />
                </div>
            </div>
        </div>
    </div>

